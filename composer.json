{
    "name": "rougin/spark-plug",
    "description": "Obtains an instance of CodeIgniter gracefully",
    "keywords": [
        "codeigniter",
        "instance",
        "php",
        "spark-plug"
    ],
    "homepage": "https://github.com/rougin/spark-plug",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "rougin/codeigniter": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Rougin\\SparkPlug\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\SparkPlug\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "suggest": {
        "rougin/codeigniter": "Installs CodeIgniter core through Composer",
        "rougin/combustor": "Generate controllers, models, and views from database for CodeIgniter",
        "rougin/refinery": "\"Ready-to-eat\" migrations for CodeIgniter"
    }
}
